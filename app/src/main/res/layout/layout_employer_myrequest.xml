<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/layout_employer_myrequest_bigContainer_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/layout_employer_myrequest_jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                android:textSize="23sp"
                android:textColor="@color/textColorHighContrast"
                android:text="Freelance / Parttime Job"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/layout_employer_myrequest_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                android:textSize="23sp"
                android:textColor="@color/textColorHighContrast"
                android:text="Budget: "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/layout_employer_myrequest_postTitle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="The Post Title is written here"/>

            <TextView
                android:id="@+id/layout_employer_myrequest_postRequestNum"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_shape"
                android:text="20"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                />



        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>