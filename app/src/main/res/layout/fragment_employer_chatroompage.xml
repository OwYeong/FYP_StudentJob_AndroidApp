<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/fragment_employer_chatroompage_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/textmeone"
        android:textSize="30sp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:gravity="center"
        android:textColor="@color/textColorContrast"
        android:text="Chat Room With "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_below="@id/fragment_employer_chatroompage_header"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_employer_chatroompage_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_employer_chatroompage_header"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">
            <EditText
                android:id="@+id/fragment_employer_chatroompage_messageBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxHeight="200dp"
                android:background="@drawable/message_edit_text"
                android:text=""
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/fragment_employer_chatroompage_sent_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/send_icon"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>