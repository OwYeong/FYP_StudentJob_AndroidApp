<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_chat_room_list_bigContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">


        <FrameLayout android:id="@+id/layout_chat_room_list_headerContainer_profilePicContainer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/layout_chat_room_list_headerContainer_profilePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/default_designer_profilepic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/newfeed_employer_post_layout_headerContainer_profilePicContainer"
                android:src="@drawable/profile_circle_crop" />

        </FrameLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6"
        android:padding="20dp">
        <TextView
            android:id="@+id/layout_chat_room_list_chatUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/textmeone"
            android:textColor="@color/colorPrimary"
            android:text="John Tan HAHA"/>
        
        <TextView
            android:id="@+id/layout_chat_room_list_chatUser_generalSkillCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/textmeone"
            android:textColor="@color/textColorContrast"
            android:text="Designer"/>

    </LinearLayout>





</LinearLayout>