<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mySwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/testRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/nestedfragment_student_homepage_newfeed_applyPostContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#99111111"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/dark_purple_rounded_rectangle_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/textmeone"
                android:text="Sent A Job Request To The Employer."
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/textmeone"
                    android:textSize="20sp"
                    android:textColor="#D7A4FF"
                    android:textStyle="normal"
                    android:text="Leave A Message"/>

                <EditText
                    android:id="@+id/nestedfragment_student_homepage_newfeed_leaveAMessage"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/light_purple_custom_edit_text_bg"
                    android:fontFamily="@font/montserrat"
                    android:textAlignment="textStart"
                    android:inputType="textPostalAddress|textMultiLine"
                    android:lineSpacingExtra="4sp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/nestedfragment_student_homepage_newfeed_leaveAMessage_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="asdasdasdasdasdas"
                    android:textColor="#ff7676"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible" />




            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/nestedfragment_student_homepage_newfeed_sentRequest_btn"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="5"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"

                        android:text="Sent Request"
                        android:background="@drawable/rounded_square_btn"/>

                    <Button
                        android:id="@+id/nestedfragment_student_homepage_newfeed_cancel_btn"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:text="Cancel"
                        android:background="@drawable/rounded_square_btn"/>

                </LinearLayout>
            </RelativeLayout>





        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>