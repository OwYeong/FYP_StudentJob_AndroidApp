<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <ScrollView
        android:id="@+id/fragment_employer_profilepage_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fragment_employer_profilepage_profileHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fragment_employer_profilepage_profilePicContainer"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true">


                    <ImageView
                        android:id="@+id/fragment_employer_profilepage_profilePicContainer_profilePic"
                        android:layout_width="143dp"
                        android:layout_height="143dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_circle_crop" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/fragment_employer_profilepage_profilePicContainer"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/fragment_employer_profilepage_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tan Emp ployer"
                        android:textStyle="normal"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/textmeone"/>
                    <TextView
                        android:id="@+id/fragment_employer_profilepage_generalSkillCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Designer / Programmer"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="@color/textColorContrast"
                        android:fontFamily="@font/textmeone"/>

                    <Button
                        android:id="@+id/fragment_employer_profilepage_editProfileBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_square_btn"
                        android:text="Edit Profile"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/textmeone"
                        android:textSize="16sp"
                        />

                </LinearLayout>




            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColorHighContrast"
                    android:textSize="20sp"
                    android:fontFamily="@font/textmeone"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fragment_employer_profilepage_aboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="@color/textColorHighContrast"
                    android:fontFamily="@font/textmeone"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/fragment_employer_profilepage_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="011-1234567"
                    android:textColor="@color/textColorPrimary"
                    android:fontFamily="@font/textmeone"
                    android:textStyle="normal"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fragment_employer_profilepage_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="EmailAddress@hotmail.com"
                    android:textColor="@color/textColorPrimary"
                    android:fontFamily="@font/textmeone"
                    android:textStyle="normal"
                    android:textSize="20dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">
                    <ImageView
                        android:id="@+id/fragment_employer_profilepage_facebookUrl_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/facebook_icon"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/fragment_employer_profilepage_twitterUrl_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/twitter_icon"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/fragment_employer_profilepage_whatsappUrl_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/whatsapp_icon"
                        android:layout_centerVertical="true"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>