<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/layout_message_send_message_sended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/chat_send_bg"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:text=""/>

    </RelativeLayout>
    <TextView
        android:id="@+id/layout_message_send_message_sended_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019-02-12 12:00:00"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/textmeone"
        android:textSize="10sp"
        android:gravity="right"/>


</LinearLayout>