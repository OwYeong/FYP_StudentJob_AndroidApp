<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_student_myrequest_history_parentLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/layout_student_myrequest_history_bigContainer_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/layout_student_myrequest_history_jobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                android:textSize="23sp"
                android:textColor="@color/textColorHighContrast"
                android:text="Freelance / Parttime Job"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/layout_student_myrequest_history_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/textmeone"
                android:textStyle="normal"
                android:textSize="23sp"
                android:textColor="@color/textColorHighContrast"
                android:text="Budget: "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/layout_student_myrequest_history_postTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/textmeone"
            android:text="The Post Title is written here"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_student_myrequest_history_accepted_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Accepted"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/green_rounded_square_btn"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_student_myrequest_history_rejected_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Rejected"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/red_rounded_square_btn"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>