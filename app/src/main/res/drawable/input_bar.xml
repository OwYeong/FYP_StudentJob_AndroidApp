<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#4b40db"/>
            <stroke android:width="0dp" android:color="#B1BCBE" />
            <corners android:topLeftRadius="22dp" android:topRightRadius="22dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" />
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>

    <item android:top="-4dp" android:right="-4dp" android:left="-4dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#1dafd6" />
        </shape>
    </item>

</layer-list>
